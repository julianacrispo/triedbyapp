<h1> products index </h1>

<h1>Products</h1>

<div class="row">
  <div class="col-md-8">
    <% @products.each do |product| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to product.name, product %>
          </h4>
          <small>
            reviews go here
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
      <%= link_to "New Product", new_product_path, class: 'btn btn-success' %>
  </div>
</div>